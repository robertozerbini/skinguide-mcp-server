{
  "name": "skinguide-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for SkinGuide: search skincare products by Baumann skin type, product category, country, and budget. Exposes AI-friendly endpoints for dry, sensitive, and other skin types.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "skinguide": "./dist/index.js"
  },
  "scripts": {
    "build": "NODE_OPTIONS=--max-old-space-size=8192 tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "NODE_OPTIONS=--max-old-space-size=8192 tsc --watch",
    "test": "npm run build && node examples/node_client.js"
  },
  "keywords": [
    "mcp-server",
    "ai-tool",
    "skincare",
    "baumann-skin-type",
    "model-context-protocol",
    "skinguide",
    "beauty",
    "dermatology",
    "ai-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": "https://skinguide.beauty/",
  "repository": {
    "type": "git",
    "url": "https://github.com/robertozerbini/skinguide-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/robertozerbini/skinguide-mcp-server/issues"
  }
}
